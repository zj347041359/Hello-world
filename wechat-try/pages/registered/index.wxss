.logo{
  height: 150px;
  background:#DF4040;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form{
  position: relative;
  top: -25px;
  margin:0 10px;
  border:1px solid #f0f0f0;
  border-radius: 5px;
  box-shadow:#666 0 0 10px;
  background:#fff;
  min-height: 150px;
  padding:20px 15px;
}
.input{
  display: grid;
  grid-template-columns:30% 70%;
  padding:10px 0;
  border-bottom: 1px solid #f0f0f0;
  justify-items:center;
}
